@{
    var services = ViewBag.Services as List<Service> ?? new List<Service>();
    var caseStudies = ViewBag.CaseStudies as List<CaseStudy> ?? new List<CaseStudy>();
}

<section class="hero">
    <div class="container">
        <div class="hero-content">
            <h1>Professional Automotive Services Across the South Coast</h1>
            <p class="lead">IMI & ATA accredited technicians with 27 years combined experience</p>
            <p>Specializing in diagnostics, servicing, clutches, timing belts, and repairs</p>
            <div class="hero-actions">
                <a href="tel:07544064878" class="btn btn-primary">
                    <i class="fa fa-phone"></i> Call 07544 064878
                </a>
                <a asp-controller="Home" asp-action="Contact" class="btn btn-secondary">
                    Get a Quote
                </a>
            </div>
        </div>
    </div>
</section>

<section class="services-section">
    <div class="container">
        <h2>Our Services</h2>
        <p class="section-intro">From diagnostics to complete servicing, we handle all your automotive needs</p>
        <div class="services-grid">
            @foreach (var service in services)
            {
                <div class="service-card">
                    @if (!string.IsNullOrEmpty(service.Icon))
                    {
                        <i class="fa @service.Icon service-icon"></i>
                    }
                    <h3>@service.Title</h3>
                    <p>@service.Summary</p>
                    <a asp-controller="Service" asp-action="Index" asp-route-serviceSlug="@service.Slug" class="btn btn-link">
                        Learn More <i class="fa fa-arrow-right"></i>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<section class="why-choose-us">
    <div class="container">
        <h2>Why Choose Wakes Autocare?</h2>
        <div class="features-grid">
            <div class="feature">
                <i class="fa fa-certificate"></i>
                <h3>Qualified Technicians</h3>
                <p>IMI & ATA accredited with experience at Rolls Royce, BMW, Land Rover, VW, and Ford</p>
            </div>
            <div class="feature">
                <i class="fa fa-clock"></i>
                <h3>27 Years Experience</h3>
                <p>Combined expertise in the automotive industry</p>
            </div>
            <div class="feature">
                <i class="fa fa-truck"></i>
                <h3>Mobile Service</h3>
                <p>We come to you across the South Coast</p>
            </div>
            <div class="feature">
                <i class="fa fa-star"></i>
                <h3>Family Business</h3>
                <p>Reliable, trustworthy service you can depend on</p>
            </div>
        </div>
    </div>
</section>

<section class="brands-section" style="background: var(--light-bg);">
    <div class="container">
        <h2>Experience You Can Trust</h2>
        <p class="section-intro">Our technicians have trained and worked with premium automotive brands</p>
        <div class="brands-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 30px; margin-top: 40px;">
            <div class="brand-item" style="text-align: center; padding: 20px;">
                <i class="fa fa-car" style="font-size: 2.5rem; color: var(--text-light); margin-bottom: 10px;"></i>
                <h4 style="color: var(--secondary-color); margin: 10px 0 5px;">Rolls Royce</h4>
                <p style="color: var(--text-light); font-size: 0.9rem;">Luxury Expertise</p>
            </div>
            <div class="brand-item" style="text-align: center; padding: 20px;">
                <i class="fa fa-car" style="font-size: 2.5rem; color: var(--text-light); margin-bottom: 10px;"></i>
                <h4 style="color: var(--secondary-color); margin: 10px 0 5px;">BMW</h4>
                <p style="color: var(--text-light); font-size: 0.9rem;">German Engineering</p>
            </div>
            <div class="brand-item" style="text-align: center; padding: 20px;">
                <i class="fa fa-car" style="font-size: 2.5rem; color: var(--text-light); margin-bottom: 10px;"></i>
                <h4 style="color: var(--secondary-color); margin: 10px 0 5px;">Land Rover</h4>
                <p style="color: var(--text-light); font-size: 0.9rem;">4x4 Specialists</p>
            </div>
            <div class="brand-item" style="text-align: center; padding: 20px;">
                <i class="fa fa-car" style="font-size: 2.5rem; color: var(--text-light); margin-bottom: 10px;"></i>
                <h4 style="color: var(--secondary-color); margin: 10px 0 5px;">Volkswagen</h4>
                <p style="color: var(--text-light); font-size: 0.9rem;">European Standards</p>
            </div>
            <div class="brand-item" style="text-align: center; padding: 20px;">
                <i class="fa fa-car" style="font-size: 2.5rem; color: var(--text-light); margin-bottom: 10px;"></i>
                <h4 style="color: var(--secondary-color); margin: 10px 0 5px;">Ford</h4>
                <p style="color: var(--text-light); font-size: 0.9rem;">Popular Models</p>
            </div>
        </div>
    </div>
</section>

<section class="what-we-offer">
    <div class="container">
        <h2>What Sets Us Apart</h2>
        <div style="max-width: 900px; margin: 0 auto;">
            <div class="offer-content" style="display: grid; grid-template-columns: 1fr 1fr; gap: 40px; margin-top: 40px;">
                <div>
                    <h3 style="color: var(--primary-color); margin-bottom: 15px;"><i class="fa fa-tools" style="margin-right: 10px;"></i>Professional Service</h3>
                    <p style="margin-bottom: 20px; line-height: 1.8;">From routine servicing to complex diagnostics and major repairs, we handle all your automotive needs with precision and care. Using the latest diagnostic equipment and genuine parts, your vehicle is in expert hands.</p>

                    <h3 style="color: var(--primary-color); margin-bottom: 15px;"><i class="fa fa-map-marked-alt" style="margin-right: 10px;"></i>Convenient Mobile Service</h3>
                    <p style="line-height: 1.8;">Can't get to us? No problem. Our fully-equipped mobile service brings professional automotive care directly to your door across Portsmouth, Waterlooville, and the entire South Coast.</p>
                </div>
                <div>
                    <h3 style="color: var(--primary-color); margin-bottom: 15px;"><i class="fa fa-pound-sign" style="margin-right: 10px;"></i>Transparent Pricing</h3>
                    <p style="margin-bottom: 20px; line-height: 1.8;">We believe in honest, upfront pricing with no hidden costs. Get a detailed quote before any work begins, and rest assured you're getting quality service at competitive rates.</p>

                    <h3 style="color: var(--primary-color); margin-bottom: 15px;"><i class="fa fa-handshake" style="margin-right: 10px;"></i>Customer First</h3>
                    <p style="line-height: 1.8;">As a family-run business, we treat every customer's vehicle as if it were our own. Check out our Facebook reviews to see what our satisfied customers have to say.</p>
                </div>
            </div>
        </div>
    </div>
</section>

@if (caseStudies.Any())
{
    <section class="case-studies-section">
        <div class="container">
            <h2>Recent Work</h2>
            <div class="case-studies-grid">
                @foreach (var caseStudy in caseStudies)
                {
                    <div class="case-study-card">
                        @if (!string.IsNullOrEmpty(caseStudy.FeaturedImage))
                        {
                            <img src="@caseStudy.FeaturedImage" alt="@caseStudy.Title" />
                        }
                        <h3>@caseStudy.Title</h3>
                        <p>@caseStudy.Summary</p>
                        <a asp-controller="CaseStudy" asp-action="Details" asp-route-slug="@caseStudy.Slug" class="btn btn-link">
                            Read More <i class="fa fa-arrow-right"></i>
                        </a>
                    </div>
                }
            </div>
            <div class="text-center" style="margin-top: 40px;">
                <a asp-controller="CaseStudy" asp-action="Index" class="btn btn-link" style="font-size: 1.1rem;">
                    View All Case Studies <i class="fa fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </section>
}
@if (!caseStudies.Any())
{
    <section class="portfolio-teaser" style="background: var(--light-bg);">
        <div class="container">
            <h2>Our Work Speaks For Itself</h2>
            <p class="section-intro">From clutch replacements to wet belt changes, diagnostics to full services - we've handled it all. Check out our Facebook page for photos and reviews of recent work, or give us a call to discuss your vehicle's needs.</p>
            <div class="text-center" style="margin-top: 30px;">
                <a href="tel:07544064878" class="btn btn-primary">
                    <i class="fa fa-phone"></i> Call 07544 064878
                </a>
            </div>
        </div>
    </section>
}

<section class="cta-section">
    <div class="container">
        <h2>Ready to get started?</h2>
        <p>Contact us today for expert automotive service</p>
        <div class="cta-actions">
            <a href="tel:07544064878" class="btn btn-primary">
                <i class="fa fa-phone"></i> 07544 064878
            </a>
            <a href="mailto:Wakesautocare@gmail.com" class="btn btn-secondary">
                <i class="fa fa-envelope"></i> Email Us
            </a>
        </div>
    </div>
</section>
